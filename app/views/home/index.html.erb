<div class="">
  <div class="container box">
    <div class="balance">
      <button type="button" class="btn " data-bs-toggle="modal" data-bs-target="#exampleModal">
        <h1 style="font-size: 3vw;">Balance</h1>
      </button>
    </div>
    <div class="deposit">
      <h1 style="font-size: 3vw;">
        <%= link_to "Deposit", transaction_deposit_path(), class:"btn", style:"font-size:3vw" %>
      </h1>
    </div>

    <div class="withdraw">
      <h1 style="font-size: 3vw;">
        <%= link_to "Withdraw", transaction_withdraw_path(), class:"btn", style:"font-size:3vw" %>
      </h1>
    </div>
  </div>
</div>

      
  
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Your current balance: </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <h1>
          <%= current_user.account.card.amount if user_signed_in? && current_user.account %>F
        </h1>
      </div>
      <h5>Date :<%= Time.now %></h5>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
