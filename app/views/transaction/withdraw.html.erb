<h1>Withdraw Transaction</h1>

<h1>New Balance : <%= current_user.account.card.amount if current_user.account %>F</h1>

<!-- /////// DISPLAY WITHDRAW AMOUNT FORM -->
<%= form_with(model: Transaction, url: transaction_withdraw_path()) do |form| %>
  <div class="form-group col-md-4">
    <%= form.label :amount, style: "display: block" %>
    <%= form.text_field :amount, class:"form-control", required: true %>
  </div>  
  <br>
  <div class="form-group col-md-4">
    <%= form.submit "Validate", class:"btn btn-warning form-control" %>
  </div>
<% end %>

<!-- /////// END DISPLAY WITHDRAW AMOUNT FORM -->