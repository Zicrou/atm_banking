<h1>Deposit Transaction</h1>


<h1>New Balance : <%= current_user.account.card.amount %>F</h1>
<!-- /////// DISPLAY DEPOSIT AMOUNT FORM -->
<%= form_with(model: Transaction, url: transaction_deposit_path()) do |form| %>
  <div class="form-group col-md-4">
    <%= form.label :amount, style: "display: block" %>
    <%= form.text_field :amount, class:"form-control", required: true %>
  </div>  
  <br>
  <div class="form-group col-md-4">
    <%= form.submit "Validate", class:"btn btn-warning form-control" %>
  </div>
  <% end %>
  
  <!-- /////// END DISPLAY DEPOSIT AMOUNT FORM -->